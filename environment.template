# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Databricks Configuration
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your-databricks-token

# PostgreSQL Configuration (Lakebase managed)
POSTGRES_HOST=your-postgres-host.com
POSTGRES_PORT=5432
POSTGRES_DB=doc_intelligence
POSTGRES_USER=your-username
POSTGRES_PASSWORD=your-password

# Volume Paths (adjust as needed)
DOC_INPUT_VOLUME=/Volumes/main/default/doc_input
DOC_OUTPUT_VOLUME=/Volumes/main/default/doc_output

# Vector Search Configuration (optional)
VECTOR_SEARCH_ENDPOINT=your-vector-search-endpoint
VECTOR_SEARCH_INDEX=your-vector-search-index

# LLM Model Configuration
LLM_MODEL_NAME=databricks-meta-llama-3-1-70b-instruct
LLM_MAX_TOKENS=1000
LLM_TEMPERATURE=0.7
